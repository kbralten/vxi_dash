# Example environment configuration for the VXI-11 Dashboard backend
APP_NAME="VXI-11 Dashboard API"
API_PREFIX="/api"
DATABASE_URL="sqlite+aiosqlite:///./vxi_dash.db"

# When true, known mock hostnames (e.g., mock_instrument) will use an in-process VXI-11 mock client.
# Defaults to false to favor real VXI-11 connections.
VXI11_ENABLE_MOCK=false
