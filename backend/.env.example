# Example environment configuration for the VXI-11 Dashboard backend
APP_NAME="VXI-11 Dashboard API"
API_PREFIX="/api"
DATABASE_URL="sqlite+aiosqlite:///./vxi_dash.db"

# When true, known mock hostnames (e.g., mock_instrument) will use an in-process VXI-11 mock client.
# Defaults to false to favor real VXI-11 connections.
VXI11_ENABLE_MOCK=false

# Optional compatibility mode: allow raw TCP SCPI when an address includes a port.
# If true and the address looks like host:port[/device], the backend will use a
# simple TCP client on that port instead of VXI-11. Defaults to false.
VXI11_ALLOW_TCP_SCPI=false

# When true, the backend will lock before each operation and unlock immediately after,
# mirroring a lock()/ask()/unlock() sequence. Defaults to true.
VXI11_AUTO_UNLOCK=true
